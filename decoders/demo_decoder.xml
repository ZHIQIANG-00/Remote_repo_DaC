<!-- 
  A decoder extracts fields from log messages.
  This example extracts failed login attempts from authentication logs.
-->

<decoder name="demo_auth_decoder">
    <program_name>sshd</program_name>
</decoder>

<!--demo_auth_decoder - Parses SSH logs and extracts: action, username, and source IP-->
<decoder name="demo_auth_decoder" offset="after">
    <regex>Failed (\w+) for (\w+) from (\d+\.\d+\.\d+\.\d+)</regex>
    <order>action, user, srcip</order>
</decoder>

<!-- Alternative JSON decoder example 
demo_json_decoder - Handles JSON format logs from custom applications-->
<decoder name="demo_json_decoder">
    <program_name>custom_app</program_name>
    <plugin_decoder>JSON</plugin_decoder>
</decoder>

